        <SplitView
            DisplayMode="Inline"
            IsPaneOpen="True"
            PaneBackground="{ThemeResource SystemControlAcrylicWindowBrush}">
            <SplitView.Pane>
                <Grid
                    x:Name="MasterPanel"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ContextFlyout="{StaticResource CommandsMenu}"
                    IsRightTapEnabled="True">
                    <ListView
                        x:Name="MasterList"
                        AllowDrop="True"
                        CanReorderItems="True"
                        IsSwipeEnabled="True"
                        ItemsSource="{x:Bind ViewModel.Instances, Mode=OneWay}"
                        ReorderMode="Enabled"
                        SelectedItem="{x:Bind ViewModel.SelectedItem, Mode=TwoWay}"
                        SelectionChanged="masterDetail_SelectionChanged"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:ShellView">
                                <StackPanel Margin="{StaticResource XSmallLeftTopRightBottomMargin}" Spacing="4">
                                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="{x:Bind Title}" />
                                    <TextBlock
                                        Opacity=".6"
                                        Text="{x:Bind Caption}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <ContentPresenter Content="{x:Bind ViewModel.SelectedItem.Content, Mode=OneWay}" />
            </SplitView.Content>
        </SplitView>
    </Grid>

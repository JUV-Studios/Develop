<Page
    x:Class="ProjectCodeEditor.Views.EditorShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ProjectCodeEditor.Models"
    xmlns:vmodels="using:ProjectCodeEditor.ViewModels"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Page.Resources>
        <MenuFlyout x:Key="CommandsMenu" AreOpenCloseAnimationsEnabled="True">
            <MenuFlyoutItem x:Uid="OpenFilesItem" Click="{x:Bind vmodels:Interaction.OpenFile}">
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="OpenFile" />
                </MenuFlyoutItem.Icon>
                <MenuFlyoutItem.KeyboardAccelerators>
                    <KeyboardAccelerator Key="O" Modifiers="Control" />
                </MenuFlyoutItem.KeyboardAccelerators>
            </MenuFlyoutItem>
            <MenuFlyoutItem
                x:Uid="CreateFileItem"
                Click="{x:Bind vmodels:Interaction.CreateFile}"
                Icon="Add">
                <MenuFlyoutItem.KeyboardAccelerators>
                    <KeyboardAccelerator Key="N" Modifiers="Control" />
                </MenuFlyoutItem.KeyboardAccelerators>
            </MenuFlyoutItem>
        </MenuFlyout>
    </Page.Resources>

    <Page.KeyboardAccelerators>
        <KeyboardAccelerator
            Key="Tab"
            Invoked="FastSwitch"
            Modifiers="Control" />
        <KeyboardAccelerator
            Key="W"
            Invoked="Close"
            Modifiers="Control" />
        <KeyboardAccelerator
            Key="W"
            Invoked="Browser"
            Modifiers="Menu" />
        <KeyboardAccelerator
            Key="F8"
            Invoked="MemoryFree"
            Modifiers="Menu" />
        <KeyboardAccelerator
            Key="Number1"
            Invoked="NavigateToNumberedTabKeyboardAccelerator_Invoked"
            Modifiers="Control" />
        <KeyboardAccelerator
            Key="Number2"
            Invoked="NavigateToNumberedTabKeyboardAccelerator_Invoked"
            Modifiers="Control" />
        <KeyboardAccelerator
            Key="Number3"

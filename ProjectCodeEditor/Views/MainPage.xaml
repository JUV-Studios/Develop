<local:BaseLayout
    x:Class="ProjectCodeEditor.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProjectCodeEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ProjectCodeEditor.Models"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Grid>
        <Pivot
            x:Name="pivot"
            Margin="{StaticResource SmallLeftTopRightBottomMargin}"
            SelectionChanged="Pivot_SelectionChanged">
            <PivotItem x:Uid="RecentsPivot" Tag="Recent">
                <Grid>
                    <TextBlock
                        x:Uid="RecentEmpty_Title"
                        Margin="{StaticResource SmallTopBottomMargin}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Visibility="{x:Bind ViewModel.IsEmpty, Converter={StaticResource BoolToVisibility}, Mode=OneWay}" />
                    <ListView
                        x:Name="recentList"
                        Margin="{StaticResource SmallTopBottomMargin}"
                        DoubleTapped="RecentList_DoubleClick"
                        IsDoubleTapEnabled="True"
                        ItemsSource="{x:Bind ViewModel.RecentItems, Mode=OneWay}"
                        SelectionChanged="recentList_SelectionChanged"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:RecentItem">
                                <StackPanel Margin="{StaticResource XSmallLeftTopRightBottomMargin}" Spacing="4">
                                    <TextBlock Style="{StaticResource BodyTextStyle}" Text="{x:Bind Title}" />
                                    <TextBlock Opacity=".6" Text="{x:Bind Location}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>
            <PivotItem x:Uid="SettingsPivot" Tag="Setting">
                <Frame SourcePageType="{x:Bind SettingsPageType}" />
            </PivotItem>
        </Pivot>
    </Grid>
</local:BaseLayout>

<UserControl
    x:Class="Develop.CodeEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Develop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <RichEditBox x:Name="Editor" FontSize="{x:Bind local:AppSettings.Preferences.FontSize, Mode=OneWay}">
        <RichEditBox.Resources>
            <Style TargetType="RichEditBox">
                <Setter Property="ClipboardCopyFormat" Value="PlainText" />
                <Setter Property="TextWrapping" Value="NoWrap" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="CornerRadius" Value="0" />
                <Setter Property="Margin" Value="0" />
                <Setter Property="Padding" Value="12,12,12,8" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
            </Style>
        </RichEditBox.Resources>
    </RichEditBox>
</UserControl>
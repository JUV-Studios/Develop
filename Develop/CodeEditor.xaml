<UserControl
    x:Class="Develop.CodeEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:editor="using:TextEditor.UI"
    xmlns:local="using:Develop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <UserControl.Resources>
        <MenuFlyout x:Key="OptionsMenu">
            <MenuFlyoutSubItem x:Uid="HistorySubItem">
                <MenuFlyoutSubItem.Icon>
                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE81C;" />
                </MenuFlyoutSubItem.Icon>
                <MenuFlyoutItem Click="{x:Bind Editor.Undo}" IsEnabled="{x:Bind Editor.CanUndo, Mode=OneWay}">
                    <MenuFlyoutItem.Command>
                        <StandardUICommand Kind="Undo" />
                    </MenuFlyoutItem.Command>
                </MenuFlyoutItem>
                <MenuFlyoutItem Click="{x:Bind Editor.Redo}" IsEnabled="{x:Bind Editor.CanRedo, Mode=OneWay}">
                    <MenuFlyoutItem.Command>
                        <StandardUICommand Kind="Redo" />
                    </MenuFlyoutItem.Command>
                </MenuFlyoutItem>
            </MenuFlyoutSubItem>
            <MenuFlyoutItem Click="{x:Bind Editor.SelectAll}">
                <MenuFlyoutItem.Command>
                    <StandardUICommand Kind="SelectAll" />
                </MenuFlyoutItem.Command>
            </MenuFlyoutItem>
        </MenuFlyout>
        <Style TargetType="RichEditBox">
            <Setter Property="Background" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
            <Setter Property="ClipboardCopyFormat" Value="PlainText" />
            <Setter Property="TextWrapping" Value="NoWrap" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="12,12,12,8" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <ProgressRing
            x:Name="Ring"
            Width="100"
            Height="100"
            IsActive="True" />
        <editor:SyntaxEditor
            x:Name="TextView"
            AutomationProperties.Name="{x:Bind WorkingFile.Name}"
            ContextFlyout="{StaticResource OptionsMenu}"
            FontFamily="{x:Bind local:AppSettings.Preferences.FontFamily, Mode=OneWay}"
            FontSize="{x:Bind local:AppSettings.Preferences.FontSize, Mode=OneWay}"
            Visibility="Collapsed" />
    </Grid>
</UserControl>
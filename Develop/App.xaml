<Application
	x:Class="Develop.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converters="using:Shared.Converters">

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" Version="Latest" />
				<ResourceDictionary Source="ms-appx:///HubStyles.xaml" />
			</ResourceDictionary.MergedDictionaries>
			<ResourceDictionary.ThemeDictionaries>
				<ResourceDictionary x:Key="Dark">
					<SolidColorBrush x:Key="MaterialPageBackground" Color="#121212" />
				</ResourceDictionary>
				<ResourceDictionary x:Key="Default">
					<SolidColorBrush x:Key="MaterialPageBackground" Color="#faf9f8" />
				</ResourceDictionary>
			</ResourceDictionary.ThemeDictionaries>
			<converters:LocalizationStringConverter x:Key="ResourceController" />
			<converters:EnumToString x:Key="EnumStringify" />
			<converters:BoolReverse x:Key="BooleanReverse" />
			<x:Double x:Key="MinWindowBreakpoint">0</x:Double>
			<x:Double x:Key="MediumWindowBreakpoint">641</x:Double>
			<x:Double x:Key="LargeWindowBreakpoint">1008</x:Double>
		</ResourceDictionary>
	</Application.Resources>
</Application>
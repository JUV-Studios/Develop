<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
	<Style TargetType="Hub">
		<Setter Property="Padding" Value="0" />
		<Setter Property="Margin" Value="48,48,48,0" />
		<Setter Property="HeaderTemplate">
			<Setter.Value>
				<DataTemplate>
					<TextBlock Style="{ThemeResource HeaderTextBlockStyle}" Text="{Binding}" />
				</DataTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<Style TargetType="HubSection">
		<Setter Property="Padding" Value="0" />
		<Setter Property="Margin" Value="0,0,8,48" />
		<Setter Property="HeaderTemplate">
			<Setter.Value>
				<DataTemplate>
					<TextBlock Style="{ThemeResource TitleTextBlockStyle}" Text="{Binding}" />
				</DataTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uix="using:TextEditor.UI">

    <Style TargetType="uix:SyntaxEditor">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="uix:SyntaxEditor">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        UseLayoutRounding="True">
                        <ContentPresenter Content="{TemplateBinding TextView}">
                            <ContentPresenter.Resources>
                                <Style TargetType="RichEditBox">
                                    <Setter Property="IsSpellCheckEnabled" Value="False" />
                                    <Setter Property="DisabledFormattingAccelerators" Value="All" />
                                    <Setter Property="ClipboardCopyFormat" Value="PlainText" />
                                    <Setter Property="TextWrapping" Value="NoWrap" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="Padding" Value="12" />
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="VerticalAlignment" Value="Stretch" />
                                </Style>
                            </ContentPresenter.Resources>
                        </ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="uix:SyntaxViewer">
        <Setter Property="FontFamily" Value="Consolas" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="uix:SyntaxViewer">
                    <ScrollViewer
                        x:Name="ScrollViewer"
                        Padding="10"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        UseLayoutRounding="True"
                        ZoomMode="Disabled">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.ColumnSpan="3"
                                Margin="10,0,0,-1"
                                VerticalAlignment="Top"
                                BorderBrush="#FFFFEE62"
                                BorderThickness="0,1"
                                Visibility="{TemplateBinding HighlightSelectedLine}">
                                <Border.RenderTransform>
                                    <TranslateTransform Y="{Binding HighlightTop, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                </Border.RenderTransform>
                                <Image
                                    Height="{TemplateBinding LineHeight}"
                                    Margin="-10,0,0,0"
                                    HorizontalAlignment="Left"
                                    Source="ms-appx:///TextEditor/Yellow.png"
                                    Stretch="None" />
                            </Border>

                            <ContentPresenter
                                Grid.Column="1"
                                Margin="0,0,15,0"
                                Content="{TemplateBinding LineNumberBlock}" />
                            <ContentPresenter Grid.Column="2" Content="{TemplateBinding TextView}" />
                        </Grid>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
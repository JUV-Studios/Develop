<Hub
    x:Class="Develop.ModernHub"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Develop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Padding="0"
    SizeChanged="Hub_SizeChanged"
    mc:Ignorable="d">
    <Hub.Resources>
        <Thickness x:Key="SmallMargin">24,24,24,0</Thickness>
        <Thickness x:Key="MediumMargin">36,36,36,0</Thickness>
        <Thickness x:Key="LargeMargin">48,48,48,0</Thickness>
    </Hub.Resources>
    <Hub.HeaderTemplate>
        <DataTemplate x:DataType="x:String">
            <TextBlock Style="{ThemeResource HeaderTextBlockStyle}" Text="{x:Bind}" />
        </DataTemplate>
    </Hub.HeaderTemplate>
</Hub>
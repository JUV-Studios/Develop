 <SplitView.Content>
            <controls:MasterDetailsView x:Name="masterDetail" CompactModeThresholdWidth="720" ItemsSource="{x:Bind ViewModel.Instances, Mode=OneWay}" SelectedItem="{x:Bind ViewModel.SelectedItem, Mode=TwoWay}" BackButtonBehavior="System" SelectedIndex="0" SelectionChanged="masterDetail_SelectionChanged">
                <controls:MasterDetailsView.ItemTemplate>
                    <DataTemplate x:DataType="models:ShellView">
                        <StackPanel Spacing="4" Margin="4">
                            <TextBlock Style="{ThemeResource PageTitleStyle}" Text="{x:Bind DisplayName}" />
                            <TextBlock Opacity=".6" Text="{x:Bind Caption}" TextWrapping="Wrap" />
                        </StackPanel>
                    </DataTemplate>
                </controls:MasterDetailsView.ItemTemplate>
                <controls:MasterDetailsView.DetailsTemplate>
                    <DataTemplate x:DataType="models:ShellView">
                        <Border Child="{x:Bind Content}" />
                    </DataTemplate>
                </controls:MasterDetailsView.DetailsTemplate>
                <controls:MasterDetailsView.MasterCommandBar>
                    <CommandBar DefaultLabelPosition="Right">
                        <AppBarButton x:Uid="OpenFileButton" Icon="OpenFile" Click="{x:Bind vmodels:Interaction.OpenFile}">
                            <AppBarButton.KeyboardAccelerators>
                                <KeyboardAccelerator Key="O" Modifiers="Control" />
                            </AppBarButton.KeyboardAccelerators>
                        </AppBarButton>
                        <AppBarButton x:Uid="CreateFileButton" Icon="Add" Click="{x:Bind vmodels:Interaction.CreateFile}">
                            <AppBarButton.KeyboardAccelerators>
                                <KeyboardAccelerator Key="N" Modifiers="Control" />
                            </AppBarButton.KeyboardAccelerators>
                        </AppBarButton>
                        <CommandBar.SecondaryCommands>
                            <AppBarButton x:Uid="MoveUpButton" Icon="Up" Click="Up_Click" />
                            <AppBarButton x:Uid="CloseButton" Icon="Clear" Click="Close_Click" />
                            <AppBarButton x:Uid="BrowserButton" Icon="Globe" Click="Browser_Click" />
                            <AppBarButton x:Uid="SettingsButton" Icon="Setting" Click="Settings_Click">
                            </AppBarButton>
                        </CommandBar.SecondaryCommands>
                    </CommandBar>
                </controls:MasterDetailsView.MasterCommandBar>
            </controls:MasterDetailsView>
        </SplitView.Content>